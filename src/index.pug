doctype html
html
    head
        title bitsy muse ui
        meta(charset="utf-8")
        // styles
        style#base-style
            include styles/base-style.css
        // scripts
        script
            include scripts/jszip.min.js
        script
            include scripts/FileSaver.min.js
        script#bitsymuse(type="text/plain")
            include scripts/bitsymuse.js
        script
            include scripts/main.js
    body(onload="start()")
        main
            h2 bitsy muse ui
            div a tool for applying David Mowatt's #[a(href="https://github.com/seleb/bitsy-hacks/blob/main/dist/bitsymuse.js") bitsymuse hack] to your bitsy game
            h2 inputs
            #inputs
                label
                    div ðŸ“„ bitsy html
                    input#bitsy(type="file" accepts="*.html" title="the playable web page exported from bitsy")
                label
                    div ðŸ”Š audio files
                    input#audio(type="file" accepts="audio/*" multiple title="all the audio files you would like to use")
            h2 audio settings
            .audio-row
                b file
                b volume
                b loop
            #audios
            h2 room settings
            .room-row
                b room
                b action
            #rooms
            h2 dialogue builder
            #dialogue-builder
                select#dialogue-action-select
                    option(value="music") set music to
                    option(value="soundeffect") play sound
                select#dialogue-audio-select
                select#dialogue-timing-select
                    option(value="Now") immediately
                    option(value="") after dialogue
                pre#dialogue-script (musicNow "S")
            #exports
                button#export-html export html
                button#export-zip export zip

